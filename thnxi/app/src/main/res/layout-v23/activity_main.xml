<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context="com.example.austi.thingsee.MainActivity" android:orientation="vertical" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/activity_main" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/mybutton"
        android:text="Request data from the ThingseeONE"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/mylist"
        android:layout_width="wrap_content"
        android:layout_height="300dp" />


    <Button
        android:id="@+id/calcbtn"
        style="@android:style/Widget.Material.Light.Button.Borderless.Small"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        android:text="Calculate" />

    <Button
        android:id="@+id/map"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        android:text="Map"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/Guide"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:text="Guide"
        android:onClick="web"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:onClick="logout"
        android:text="Logout"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="123dp" />


</LinearLayout>