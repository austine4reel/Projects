<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout tools:context="com.example.austi.thingsee.MainActivity"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/btnBackgrn"
        android:id="@+id/mybutton"
        android:text="Get coordinates"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/mylist"
        android:layout_width="339dp"
        android:layout_height="208dp" />


    <Button
        android:id="@+id/calcbtn"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_gravity="center|bottom"
        android:text="Distance"
        android:textColor="@color/btnBackgrn" />

    <Button
        android:id="@+id/map"
        android:layout_width="128dp"
        android:layout_height="35dp"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="10dp"
        android:text="Location"
        android:textColor="@color/btnBackgrn"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/Guide"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center|bottom"
        android:onClick="web"
        android:text="Help"
        android:textColor="@color/btnBackgrn"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="99dp"
        android:layout_height="35dp"
        android:layout_gravity="center|bottom"
        android:onClick="logout"
        android:text="Logout"
        android:textColor="@color/btnBackgrn"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="123dp" />

    <Button
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center|bottom"
        android:text="Info weather"
        android:textColor="@color/btnBackgrn" />


</LinearLayout>